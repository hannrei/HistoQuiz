# Windows build environment using Wine for cross-compilation
# Uses cdrx/pyinstaller-windows image (Python 3.6 with PyInstaller 5.x)
FROM cdrx/pyinstaller-windows

WORKDIR /src

# Copy application files
COPY . .

# The cdrx image has PyInstaller pre-installed
# Create empty requirements.txt to avoid version conflicts during build
RUN echo "# Build-time placeholder - PyInstaller already installed" > requirements.txt

# Entry point runs pyinstaller
CMD ["--clean", "HistoQuiz.spec"]

